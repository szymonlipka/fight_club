%center 
  %h1 Dashboard
.column-left
  = image_tag @pokemon.avatar.url(:thumb)
.column-center
  %h4 Name
  %p 
    = @pokemon.full_name
  - if @pokemon.description
    %h4 Description
    %p 
      = @pokemon.description
  %h4 Battle Points
  %p 
    = @pokemon.battle_points
  %h4 Ranking Points
  %p
    @pokemon.ranking_points
  %h4 Ranking placement
  %p
    = @pokemon.ranking
  %h4 Fights won
  %h4 Fights lost
  %p
    = @pokemon.fights_won
  %p
    = @pokemon.fights_lost
.column-right
  %h2 Skills
  - @pokemon.skills.each do |skill|
    = skill.name
    .progress
      .progress-bar{"aria-valuemax": "100", "aria-valuemin": "0", "aria-valuenow": "70", role: "progressbar", style: "width:#{skill.value*20}%", value: skill.value}
        %span.sr-only skill.value


